{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build active file",
      "command": "C:/MinGW/bin/g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-std=c++20",
        "-O2",
        "-g",
        "-I",
        "${workspaceFolder}",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: g++"
    }
  ]
}
